<Window x:Class="DelegatesWpfApp.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegatesWpfApp"
        mc:Ignorable="d"
         Title="Добавить клиента" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="IdTextBox" Text="ID клиента" Margin="5" />
            <TextBox x:Name="NameTextBox" Text="Имя клиента" Margin="5" />
            <Button Content="Добавить" Click="AddButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
